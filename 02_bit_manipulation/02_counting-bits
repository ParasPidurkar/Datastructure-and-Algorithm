//https://leetcode.com/problems/counting-bits/submissions/1329839698/

class Solution {
public:
    vector<int> countBits(int n) {
        std::vector<int> ans(n + 1, 0);
    
    for (int i = 1; i <= n; ++i) {
       int count = 0;
       int num =i;
    while (num) {
        count += num & 1;
        num >>= 1;
    }
    ans[i]=count;
    }
    
    return ans;
        
        
    }
};
